{
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationDir": "dist/types",
    "sourceMap": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "outDir": "dist/js",
    "noUnusedLocals": true,
    //"noUnusedParameters": true,
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}